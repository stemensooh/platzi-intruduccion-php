{% extends "layout.twig" %}

{% block content %}
    {% for blog in blogPosts %}
        <div class="blog-post">
            <h2>{{ blog.title }}</h2>
            <p>Jan 1, 2020 by <a href="">bolivar</a></p>
            <div class="blog-post-image">
                <img src="{{ blog.image }}" alt="">
            </div>
            <div class="blog-post-content">
                {{ blog.content }}
            </div>
        </div>
    {% endfor %}
{% endblock %}