{% extends "layout.twig" %}

{% block content %}
    <div class="blog-post">
        {% if post %}
            <h2>{{ post.title }}</h2>
            <p>Jan 1, 2020 by <a href="">bolivar</a></p>
            {% if post.image %}
                <div class="blog-post-image">
                    <img src="{{ post.image | url }}" alt="">
                </div>
            {% endif %}

            <div class="blog-post-content">
                {{ post.content }}
            </div>

        {% else %}
            <h6>{{ messageError }}</h6>
        {% endif %}
    </div>
{% endblock %}