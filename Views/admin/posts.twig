{% extends "layout.twig" %}

{% block content %}
    <h2>Posts</h2>

    <a class="btn btn-primary" href="{{ 'admin/posts/create' | url }}">New Post</a>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for blog in  blogPosts%}
            <tr>
                <td>{{ blog.title }}</td>
                <td><a href="{{ 'admin/posts/update' | url }}/{{ blog.id }}">Edit</a></td>
                <td><a href="{{ 'admin/posts/delete' | url }}/{{ blog.id }}">Delete</a></td>
            </tr>
        {% endfor %}

        </tbody>

    </table>
{% endblock %}
